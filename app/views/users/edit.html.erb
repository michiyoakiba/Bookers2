<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class = "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

    <h2>User info</h2>

    <%= form_with model: @user, method: :patch do |f| %>
      <h4>Name</h4>
      <%= f. text_field :name %>

      <h4>Image</h4>
      <input class="form-control-file user_image" accept="imagr/*"
      type="file" name="[profile_image]" id="user_profile_image">

      <h4>Introduction</h4>
      <%= f. text_area :introduction %>
      </br>
      <%= f. submit 'Update user' %>
    <% end %>
    </div>
  </div>
</div>

