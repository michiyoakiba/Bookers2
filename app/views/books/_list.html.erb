<div class="col-md-3">
  <h2>User info</h2>
<%= image_tag user.get_profile_image(100,100) %>
<div>
  <table class ="table">
    <tbody>
      <tr>
      <th>name</th>
      <th><%= @user.name %></th>
      </tr>
      <tr>
      <th>introduction</th>
      <th><%= @user.introduction %></th>
      </tr>
    </tbody>
  </table>
  <div class="row">
    <%= link_to edit_user_path(@user), class: "btn btn-outline-secondary btn-block" do %>
  <i class="fas fa-user-cog"></i>
  <% end %>
  </div>
  </div>


 <h2 class = "mt-3">New book</h2>

<%= form_with model: Book.new do |f| %>
  <h4>Tiile</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>
</br>
  <%= f.submit 'Create Book', class:"btn btn-sm btn-success btn-block-auto" %>
<% end %>

</div>